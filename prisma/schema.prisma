generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Visitor {
  id        String   @id @default(cuid())
  ip        String
  device    String
  userAgent String?
  country   String?
  city      String?
  region    String?
  createdAt DateTime @default(now())

  @@unique([ip, device])
  @@index([createdAt])
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}
